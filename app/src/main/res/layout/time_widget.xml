<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33ff0000">

    <TextView
        android:id="@+id/tv_widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="90sp"
        android:textStyle="bold"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/tv_widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_time"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="0000-00-00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_top_left_btn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:background="#3300ff00"/>

    <TextView
        android:id="@+id/tv_top_right_btn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:background="#330000ff"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3300f0f0"
        android:layout_marginTop="120dp"/>
</RelativeLayout>