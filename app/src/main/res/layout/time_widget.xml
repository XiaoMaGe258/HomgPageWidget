<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="90sp"
            android:textStyle="bold"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_widget_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:includeFontPadding="false"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_widget_time"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="0000-00-00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_top_left_btn"
        android:layout_width="160dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/tv_top_right_btn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"/>
</RelativeLayout>